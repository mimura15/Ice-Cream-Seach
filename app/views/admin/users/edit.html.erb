<div class="container">
  <div class="row">
    <div class="col-md-10">
      <%= form_with model: @user, url: admin_user_path(@user.id) do |f| %>
        <%= f.file_field :image, accept: "image/*" %>
        <table class="table table-borderless">
          <tbody>
            <tr>
              <th>ユーザーID</th>
              <td><%= @user.id %></td>
            </tr>
            <tr>
              <th>ユーザーネーム</th>
              <td><%= f.text_field :name, size: 20 %></td>
            </tr>
            <tr>
              <th>メールアドレス</th>
              <td><%= f.text_field :email, size: 20 %></td>
            </tr>
            <tr>
              <th>メッセージ</th>
              <td><%= f.text_field :message %></td>
            </tr>
            <tr>
              <th>ステータス</th>
              <td>
                <%= f.radio_button :is_active, false %>
								<%= f.label :is_active, "有効", value: false %>
								<%= f.radio_button :is_active, true %>
								<%= f.label :is_active, "退会", value: true %>
              </td>
            </tr>
          </tbody>
        </table>

        <div class="actions">
          <%= f.submit '変更を保存する' %>
        </div>
      <% end %>
    </div>
  </div>
</div>