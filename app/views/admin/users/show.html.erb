<div class="container">
  <div class="row">
    <div class="col-md-4">
      <% if @user.image.attached? %>
        <%= image_tag @user.image, size: "250x250" %>
      <% else %>
        <%= image_tag 'sweets_icecream', size: "250x250" %>
      <% end %>
    </div>

    <div class="c0l-md-8">
      <table class="table table-borderless">
        <tbody>
          <tr>
            <th>ユーザーID</th>
            <td><%= @user.id %></td>
          </tr>
          <tr>
            <th>ユーザーネーム</th>
            <td><%= @user.name %></td>
          </tr>
          <tr>
            <th>メールアドレス</th>
            <td><%= @user.email %></td>
          </tr>
          <tr>
            <th>メッセージ</th>
            <td><%= @user.message %></td>
          </tr>
          <tr>
            <th>ステータス</th>
            <td>
              <% if @user.is_active %>
                退会
              <% else %>
                有効
              <% end %>
            </td>
          </tr>
        </tbody>
      </table>
    </div>
  </div>
</div>

<%= link_to "編集する", edit_admin_user_path(@user.id) %>

<%= link_to "投稿履歴一覧を見る", admin_posts_path(user_id: @user.id) %>
<%= link_to "レビュー一覧を見る", admin_reviews_path(user_id: @user.id) %>
