<div class="container">
  <div class="row">
    <div class="col-md-6">
      <h1>投稿一覧</h1>
    </div>
  </div>
</div>

<div class="container">
  <div class="row">
    <div class="col-md-12">
      <table class="table">
        <thead class="thead-success">
          <tr>
            <th>投稿日</th>
            <th>投稿者</th>
            <th>タイトル</th>
            <th>関連店舗</th>
          </tr>
        </thead>
        <tbody>
          <% @posts.each do |post| %>
          <tr>
            <td><%= post.created_at.strftime("%Y/%m/%d") %></td>
            <td><%= post.user.name %></td>
            <td>
              <%= link_to admin_post_path(post.id) do %>
                <%= post.title %>
              <% end %>
            </td>
            <td><%= post.shop.name %></td>
          </tr>
          <% end %>
        </tbody>
      </table>
    </div>
  </div>
</div>