<div class="text-center mb-5">
  <h2>レビュー一覧</h2>
</div>


<div class="col-lg-8 com-sm-10 mx-auto">
  <table class="table">
    <thead>
      <tr>
        <th></th>
        <th>投稿者</th>
        <th>レビュー店舗</th>
        <th>レビュー日</th>
      </tr>
    </thead>
    <tbody>
      <% @reviews.each do |review| %>
      <tr>
        <td>
          <%= link_to admin_review_path(review.id), class: "text-dark" do %>
            <%= review.id %>
          <% end %>
        </td>
        <td><%= review.user.name %></td>
        <td><%= review.shop.name %></td>
        <td><%= review.created_at.strftime("%Y/%m/%d") %></td>
      </tr>
      <% end %>
    </tbody>
  </table>
</div>
