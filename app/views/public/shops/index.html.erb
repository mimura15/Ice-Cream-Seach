<div class="py-5 text-center container">
  <div class="col-lg-6 col-md-8 mx-auto">
      <h2>SHOP's</h2>
  </div>
</div>

<div class="container">
  <div class="row">
    <% @shops.each do |shop| %>
      <div class="col-lg-3 col-sm-6 mb-3">
        <%= image_tag shop.image, size: "200x200" %><br>
        <%= link_to shop_path(shop.id) do %>
          <%= shop.name %>
        <% end %>
      </div>
    <% end %>
  </div>
</div>

