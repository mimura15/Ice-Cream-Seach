<div class="py-5 text-center container">
  <div class="col-lg-6 col-md-8 mx-auto">
      <h2>SHOP's</h2>
  </div>
</div>

<div class="container">
  <div class="row">
    <% @shops.each do |shop| %>
      <div class="col-lg-3 col-sm-6 mb-3">
        <div class="mb-2 text-center"><%= image_tag shop.image, size: "200x200", class: "rounded-circle" %></div>
        <h3 class="text-center">
          <%= link_to shop_path(shop.id) do %>
            <%= shop.name %>
          <% end %>
        </h3>
      </div>
    <% end %>
  </div>
</div>