<div class="col-lg-8 col-sm-10 mx-auto">
  <%= form_with model: @post, url: posts_path do |f| %>
    <table class="table table-borderless mb-3">
      <tbody>
        <tr>
          <th style="width: 50%">投稿画像</th>
          <td><%= f.file_field :images, multiple: true %></td>
        </tr>
        <tr>
          <th>タイトル</th>
          <td><%= f.text_field :title %></td>
        </tr>
        <tr>
          <th>近くの店舗</th>
          <td><%= f.collection_select :shop_id, @shops, :id, :name, prompt: "店舗を選択する"%></td>
        </tr>
        <tr>
          <th>できごと</th>
          <td><%= f.text_area :content %></td>
        </tr>
        <tr>
          <th>
            タグ<br>
            ","で区切ることで複数タグ登録できます
          </th>
          <td><%= f.text_field :tag_name, value: @tag_list %></td>
        </tr>
      </tbody>
    </table>
    <div class="actions text-center">
      <%= f.submit '新規投稿する', class: "btn btn-success" %>
    </div>
  <% end %>
</div>
