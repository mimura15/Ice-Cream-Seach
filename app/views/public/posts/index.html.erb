<div class="container">
  <div class="row">
    <div class="col-md-6">
      <h1>投稿</h1>
      <%= link_to '新規投稿', new_post_path %>
      <%= form_with url: posts_path, method: :get, local: true do |f| %>
        <%= f.text_field :search %>
        <%= f.submit 'Search', name: nil %>
      <% end %>
    </div>
  </div>
</div>

<div class="container">
  <div class="row">
    <div class="col-md-12">
      <table class="table table-borderless">
        <thead>
          <tr>
            <th></th>
            <th>タイトル</th>
          </tr>
        </thead>
        <tbody>
          <% @posts.each do |post| %>
          <tr>
            <td>
              <% if post.images.attached? %>
                <%= image_tag post.images[0], size: "50x50" %>
              <% else %>
                <%= image_tag 'sweets_icecream', size: "50x50" %>
              <% end %>
            </td>
            <td>
              <%= link_to post_path(post.id) do %>
                <%= post.title %>
              <% end %>
            </td>
          </tr>
          <% end %>
        </tbody>
      </table>
    </div>
  </div>
</div>