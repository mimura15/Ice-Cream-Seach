<div class="text-center">
  <% if user.image.attached? %>
    <%= image_tag user.image, size: "80x80" %>
  <% else %>
    <%= image_tag 'sweets_icecream.png', size: "80x80" %>
  <% end %>
</div>

<table class="table text-center">
  <tbody>
    <tr>
      <td>
        <%= link_to user_path(user.id), class: "text-dark" do %>
          <%= user.name %>
        <% end %>
      </td>
    </tr>
    <tr>
      <td><%= user.message %></td>
    </tr>
  </tbody>
</table>

