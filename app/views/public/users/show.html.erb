<div class="card shadow-sm">
  <% if @user.image.attached? %>
    <%= image_tag @user.image, size: "50x50" %>
  <% else %>
    <%= image_tag 'sweets_icecream', size: "50x50" %>
  <% end %>
  <div class="card-body">
    <p class="card-text">
      <%= @user.name %><br>
      <%= @user.message %>
    </p>
    <% if @user == current_user? %>
      <%= link_to "編集", edit_user_path(@user) %>
    <% end 
  </div>
</div>