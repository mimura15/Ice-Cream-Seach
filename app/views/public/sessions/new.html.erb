<div class="text-center">
  <h2 class="title mb-3">LOG IN</h2>

  <%= form_with model: @user, url: user_session_path do |f| %>
    <div class="field mb-2">
      <%= f.label :email, "メールアドレス" %><br />
      <%= f.email_field :email, autofocus: true, autocomplete: "email" %>
    </div>

    <div class="field mb-2">
      <%= f.label :password, "パスワード" %><br />
      <%= f.password_field :password, autocomplete: "current-password" %>
    </div>

    <% if devise_mapping.rememberable? %>
      <div class="field mb-2">
        <%= f.check_box :remember_me %>
        <%= f.label :remember_me %>
      </div>
    <% end %>

    <div class="actions mb-2">
      <%= f.submit "ログイン", class: "btn btnx-orange-light" %>
    </div>
  <% end %>

  <div class="actions mb-2">
    <%= link_to "ゲストログイン", users_guest_sign_in_path, method: :post, class: "btn btnx-orange-light" %>
  </div>

  <%= render "public/shared/links" %>
</div>
